<div class="container">
  <div class="row">
    <div class="col-sb-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      
        <h4>Title</h4>
        <%= f.text_field :title %>
      
        <h4>Opinion</h4>
        <%= f.text_area :body %>
       <br>
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      
      <% end %>
      
      <%= link_to "Show", book_path %>
      
      |
      
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>