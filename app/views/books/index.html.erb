<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h1>Books</h1>
<table>
  <thead><tr>
    <th colspan="1"></th><th>Title</th><th>Opinion</th>
    </tr></thead>
  <tbody><% @books.each do |book| %>
    <tr>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
   <% end %>
  </tbody>
</table>
