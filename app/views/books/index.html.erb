<%= render 'list', user: @user, book: @book %>

<h1>Books</h1>
<table>
  <thead><tr>
    <th colspan="1"></th><th>Title</th><th>Opinion</th>
    </tr></thead>
  <tbody><% @books.each do |book| %>
    <tr>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
   <% end %>
  </tbody>
</table>
