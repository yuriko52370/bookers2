<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render 'books/list', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
          <th colspan="1"></th><th>Title</th><th>Opinion</th>
          </tr>
        </thead>
        <tbody><% @books.each do |book| %>
          <tr>
           <td><%= link_to @user_path do %>
                <%= image_tag @user.get_profile_image(100, 100) %>
                <% end %>
             </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

