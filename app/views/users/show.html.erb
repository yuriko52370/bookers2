<h1>User info</h1>
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
  <tbody>
    <tr>
      <td><p>name</p></td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td><p>introduction</p></td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>
<%= link_to "edit", edit_user_path(@user.id) %>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>


<h1>Books</h1>
<table>
  <thead><tr>
   <th colspan="1"></th><th>Title</th><th>Opinion</th>
    </tr></thead>
  <tbody><% @books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(100, 100) %></td>
      <td><%= link_to book.title, book_path %></td>
            <td><%= book.body %></td>
    </tr>
   <% end %>
  </tbody>
</table>

