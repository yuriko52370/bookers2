<div class="container">
  <div class="row">
    <div class="col-sb-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      
      <%= form_with model: @user do |f| %>
      
        <h4>Name</h4>
        <%= f.text_field :name %>
          
        <h4>Image</h4>
        <%= f.file_field :image, accept: "image/*" %>
        
        <h4>Introduction</h4>
        <%= f.text_area :introduction %>
        <br>
        <%= f.submit 'Update User', class: "btn btn-secondary" %>
      
      <% end %>
    </div>
  </div>
</div>